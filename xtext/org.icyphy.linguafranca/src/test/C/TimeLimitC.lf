// Test that the stop function can be used to internally impose a
// a time limit.
// Correct output for this 1, 2, 3, 4.
// Failure for this test is failing to halt.
target C(
	compile = "cc TimeLimitC.c pqueue.c reactor.c -o TimeLimitC",
	run = "./TimeLimitC -fast"
);
reactor Clock(offset:time(0), period:time(1 sec)) {
	output y:int;
	timer t(offset, period);
	state count:int(0);
	reaction(t) -> y {=
		(self->count)++;
		set(y, self->count);
	=}
}
reactor Destination {
	input x:int;
	reaction(x) {=
		printf("%d\n", x);
	=}
}
reactor Main(period:time(2 secs)) {
	timer stop(6 secs);
	reaction(stop) {=
		stop();
	=}
	c = new Clock(period = period);
	d = new Destination();
	c.y -> d.x;
}