{
	"name": "lingua-franca-lsp-client",
	"description": "VSCode client for lingua franca",
	"author": "Andres Goens, Microsoft Corporation",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "vscode",
	"repository": {
		"type": "git",
		"url": "https://github.com/lhstrh/wirewrap"
	},
   "contributes": {
       "configuration": {
           "type": "object",
           "title": "Example configuration",
           "properties": {
               "languageServerExample.maxNumberOfProblems": {
                   "type": "number",
                   "default": 100,
                   "description": "Controls the maximum number of problems produced by the server."
               },
               "languageServerExample.trace.server": {
                   "type": "string",
                   "enum": [
                       "off",
                       "messages",
                       "verbose"
                   ],
                   "default": "off",
                   "description": "Traces the communication between VSCode and the languageServerExample service."
               }        
           }
       }
   },

	"engines": {
		"vscode": "^1.23.0"
	},
	"scripts": {
		"update-vscode": "vscode-install",
		"postinstall": "vscode-install"
	},
	"dependencies": {
		"vscode-languageclient": "^4.1.4"
	},
	"devDependencies": {
		"vscode": "^1.1.30"
	}
}
