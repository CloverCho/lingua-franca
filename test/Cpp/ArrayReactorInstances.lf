target Cpp;

reactor Source(id:unsigned(0)) {
    output out:unsigned;
    
    reaction (startup) -> out {=
        out.set(id);
    =}
}

reactor Sink(id:unsigned(0)) {
    input in:unsigned;
    
    reaction (in) {=
        std::cout << "Received " << *in.get() << '\n';
        if (*in.get() != id) {
            std::cerr << "Error: expected " << id << "!\n";
            exit(1);
        }
    =}
}

main reactor ArrayReactorInstances {
    source = new Source[4]();
    sink = new Sink[4]();
    source.out -> sink.in;
}