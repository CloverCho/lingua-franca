target Cpp;

reactor Source(id:unsigned(0)) {
    output out:unsigned;
    
    reaction (startup) -> out {=
        out.set(id);
    =}
}

reactor Sink {
    input[4] in:unsigned;
    
    reaction (in) {=
        for (unsigned i; i < in.size(); i++) {
            std::cout << "Received " << *in[i].get() << '\n';
            if (*in[i].get() != i) {
                std::cerr << "Error: expected " << i << "!\n";
                exit(1);    
            }
        }
    =}
}

main reactor ArrayReactorInstances {
    source = new Source[4]();
    sink = new Sink();
    source.out -> sink.in;
}