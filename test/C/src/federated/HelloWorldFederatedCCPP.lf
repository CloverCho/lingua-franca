/**
 * This test is a variant of HelloWorld.lf that checks the compatibility
 * of the federated runtime with the CCpp target. This test should not pass 
 * if it does not compile.
 */
target CCpp {
    tracing: true,
    coordination: centralized,
    timeout: 1 sec
};
reactor HelloWorld2 {
    state success:bool(false);
    reaction(startup) {=
        printf("Hello World.\n");
        self->success = true;
    =}
    reaction(shutdown) {=
        printf("Shutdown invoked.\n");
        if (!self->success) {
            fprintf(stderr, "ERROR: startup reaction not executed.\n");
            exit(1);
        }
    =}
}

federated reactor {
    a = new HelloWorld2();
    b = new HelloWorld2(); // Create a non-singleton federation
}