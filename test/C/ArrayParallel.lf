// Source allocates an array dynamically and then sends it to two reactors,
// each of which want to modify it.
// NOTE: Ideally, only one copy would be made, but this requires
// modifying the precedence graph between reactions.
target C;
import ArrayScaleScale from "ArrayScale.lf";
import ArrayPrintSource, ArrayPrintPrint from "ArrayPrint.lf"

main reactor ArrayParallel {
    s = new ArrayPrintSource();
    c1 = new ArrayScaleScale();
    c2 = new ArrayScaleScale(scale = 3);
    p1 = new ArrayPrintPrint(scale = 2);
    p2 = new ArrayPrintPrint(scale = 3);
    s.out -> c1.in;
    s.out -> c2.in;
    c1.out -> p1.in;
    c2.out -> p2.in;
}