// Tests the is_present variable for actions.
target CCpp;
main reactor ActionIsPresent(offset:time(1 nsec), period:time(500 msec)) {
    logical action a;
    state success:bool(false);
    reaction(startup, a) -> a {=
        if (!a->is_present) {
            if (self->offset == 0) {
                std::cout << "Hello World!" << std::endl;
                self->success = true;
            } else {
                schedule(a, self->offset);
            }
        } else {
            std::cout << "Hello World 2!" << std::endl;
            self->success = true;
        }
    =}
    reaction(shutdown) {=
        if (!self->success) {
            std::cerr << "Failed to print \'Hello World\'" << std::endl;
            exit(1);
        }
    =}
}