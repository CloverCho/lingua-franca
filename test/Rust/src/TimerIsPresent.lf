// Tests the is_present function for timers.
target Rust {
    timeout: 7 msec,
    cargo-features: ["test-program"],
};

main reactor {

    timer a(0, 5 msec);
    timer b(1 msec, 5 msec);
    timer c(1 msec);

    state success: bool(false);
    state tick: u32(0);

    reaction(startup, a, b, c) {=
        match self.tick {
        0 => { // startup
            ctx.assert_tag_eq(T0);
            assert!(ctx.is_present(a));
            assert!(!ctx.is_present(b));
            assert!(!ctx.is_present(c));
        },
        1 => { // 1 msec
            ctx.assert_tag_eq(Milli(1));
            assert!(!ctx.is_present(a));
            assert!(ctx.is_present(b));
            assert!(ctx.is_present(c));
        },
        2 => { // 5 msec (a triggers)
            ctx.assert_tag_eq(Milli(5));
            assert!(ctx.is_present(a));
            assert!(!ctx.is_present(b));
            assert!(!ctx.is_present(c));
        },
        3 => { // 6 msec (b triggers)
            ctx.assert_tag_eq(Milli(6));
            assert!(!ctx.is_present(a));
            assert!(ctx.is_present(b));
            assert!(!ctx.is_present(c));
            self.success = true;
        },
        _ => {
            unreachable!("unexpected reaction invocation");
        }
        }
        self.tick += 1;
    =}
    reaction(shutdown) {=
        assert!(self.success);
        println!("success");
    =}
}
