// Test logical action with delay.
target Rust;

main reactor ActionIsPresentDouble {
    logical action act0;
    logical action act1(100 msec);

    reaction(startup) -> act0, act1 {=
        ctx.schedule(act0, After(Duration::from_millis(100)));
        ctx.schedule(act1, After(Duration::from_millis(0)));
        ctx.schedule(act1, Asap);
    =}

    reaction(act1, act0) {=
        assert!(ctx.is_action_present(act0));
        assert!(ctx.is_action_present(act1));
        println!("success")
    =}

}
