// Test logical action with delay.
target Rust;

main reactor ActionImplicitDelay {
    logical action act(40 msec);
    state count: u64(1);

    reaction(startup) -> act {=
        ctx.schedule(act, Asap);
    =}

    reaction(act) -> act {=
        ctx.assert_tag_eq(Duration::from_millis(40 * self.count), 0);
        self.count += 1;
        if self.count <= 3 {
            ctx.schedule(act, Asap);
        } else {
            println!("SUCCESS")
        }
    =}
}
