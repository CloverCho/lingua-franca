 // Check bank of reactors sending to bank of reactors.
target Python {
    timeout: 2 sec,
    fast: true,
    threads: 1
}; 
reactor Source(instance(0)) {
	timer t(0, 200 msec);
	output out;
	state s(0);
	reaction(t) -> out {=
        out.set(self.s)
        self.s += self.instance
	=}
}
reactor Destination(instance(0)) {
	state s(0);
	input _in;
	reaction(_in) {=
        print("Destination " + str(self.instance) + " received: " + str(_in.value))
        if (_in.value != self.s):
            sys.stderr.write("ERROR: Expected " + str(self.s))
            exit(1)
        self.s += self.instance
	=}
	reaction(shutdown) {=
        if self.s == 0 and self.instance != 0:
            sys.stderr.write("ERROR: Destination " + self.instance + " received no input!")
            exit(1)
        print("Success.")
    =}
}

main reactor BankToBank(width(4)) { 
	a = new[width] Source();
	b = new[width] Destination();
	a.out -> b._in;
}
