// Simply apply the requested force
reactor Brakes {
	input force:int;
}

// Simply apply the requested torque
reactor Engine {
	input torque:int;
}

reactor BrakeControl {
	input angle:int;
	output force:int;
}

reactor Main {
	lp = new LeftPedal();
	rp = new RightPedal();
	bc = new BrakeControl(); // FIXME: check for referencing unknown reactor classes
	ec = new EngineControl();
	b = new Brakes();
	e = new Engine();
	
	lp.angle -> bc.angle;
	bc.force -> b.force;
	lp.on_off -> ec.on_off;
	ec.torque -> e.torque;
	ec.check -> rp.check;
	rp.angle -> ec.angle;
	
}